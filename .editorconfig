# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

[*.json]
indent_style = space
indent_size = 2

[*.java]
indent_size = 4
indent_style = tab
max_line_length = 250
insert_final_newline = true
trim_trailing_whitespace = true

[*.adoc]
indent_size = 2
indent_style = space
max_line_length = off
trim_trailing_whitespace = true

[*.sql]
indent_size = 2
indent_style = space
max_line_length = off
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space
max_line_length = off
trim_trailing_whitespace = true
end_of_line = lf

[*.{csv,tsv}]
trim_trailing_whitespace = true

[*.gradle]
indent_size = 4
indent_style = space
max_line_length = off
trim_trailing_whitespace = true
end_of_line = lf

[*.{graphql,graphqls}]
indent_size = 2
indent_style = tab
max_line_length = off
trim_trailing_whitespace = true
end_of_line = lf

[*.http]
indent_size = 2
indent_style = space
max_line_length = off
trim_trailing_whitespace = true
end_of_line = lf
